<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/activity_content_margin"
    android:paddingBottom="@dimen/activity_content_margin">

    <ImageView
        android:id="@+id/userItemIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_content_margin"
        android:tint="?colorSecondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"
        tools:src="@drawable/ic_perm_identity_black_24dp" />

    <TextView
        android:id="@+id/userItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_content_margin"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
        app:layout_constraintStart_toEndOf="@id/userItemIcon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="John Scott" />

    <TextView
        android:id="@+id/userItemEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_content_margin"
        android:layout_marginTop="@dimen/form_element_margin"
        app:layout_constraintStart_toEndOf="@id/userItemIcon"
        app:layout_constraintTop_toBottomOf="@id/userItemName"
        tools:text="john.scott@example.com" />
</androidx.constraintlayout.widget.ConstraintLayout>