<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:colorBackground"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/activity_content_margin">

        <TextView
            android:id="@+id/shoppingListStatus"
            style="@style/Widget.App.BadgeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            tools:text="To Do" />

        <TextView
            android:id="@+id/shoppingListUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            tools:text="John Scott" />

        <TextView
            android:id="@+id/shoppingListTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            tools:text="Total: 3.60 â‚¬" />

        <TextView
            android:id="@+id/shoppingListItemsCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:textStyle="bold"
            tools:text="5 products" />

        <TextView
            android:id="@+id/shoppingListProductsList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_content_margin"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            tools:text="- Bread\n- Water\n- Meat" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>