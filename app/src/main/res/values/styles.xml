<resources>

    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/cardview_radius</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">@dimen/cardview_elevation</item>
    </style>

    <style name="Widget.App.CardView.Outlined">
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/light_gray</item>
    </style>

    <style name="Widget.App.BottomSheet" parent="">
        <item name="android:background">@drawable/bottom_sheet_background</item>
        <item name="android:minHeight">@dimen/bottomsheet_min_height</item>
        <item name="android:paddingLeft">@dimen/bottomsheet_padding</item>
        <item name="android:paddingRight">@dimen/bottomsheet_padding</item>
        <item name="android:paddingTop">@dimen/bottomsheet_padding</item>
        <item name="android:paddingBottom">@dimen/bottomsheet_padding</item>
    </style>

    <style name="Widget.App.ListView.Item" parent="">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="android:paddingTop">@dimen/form_element_margin</item>
        <item name="android:paddingBottom">@dimen/form_element_margin</item>
        <item name="drawableTint">?colorSecondary</item>
        <item name="android:drawablePadding">@dimen/list_item_margin</item>
    </style>
</resources>
